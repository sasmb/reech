{
  "name": "@reech/shared",
  "version": "1.0.0",
  "description": "Shared types, schemas, and utilities for Reech SaaS application",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts", 
      "import": "./dist/types/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "node simple-test.js",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "reech",
    "saas",
    "multi-tenant",
    "typescript",
    "zod",
    "shared"
  ],
  "author": "Reech Development Team",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^22.15.17",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "tsup": "^8.0.2",
    "typescript": "^5.8.3",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/reech-saas.git",
    "directory": "packages/shared"
  },
  "bugs": {
    "url": "https://github.com/your-org/reech-saas/issues"
  },
  "homepage": "https://github.com/your-org/reech-saas#readme"
}
