{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Package-specific overrides
    "composite": true,
    "noEmit": true,
    "outDir": "./dist",
    "rootDir": ".",
    
    // Declaration files for package consumers
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    
    // Path Mapping for this package
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    
    // Library-specific settings
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "schemas/**/*.ts",
    "schemas/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.js",
    "**/*.mjs"
  ],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "bundler"
    }
  }
}
